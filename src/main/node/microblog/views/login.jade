extends layout
block content
    form.form-horizontal(method="post")
        fieldset
            legend 用户登录
            div.control-group
                label.control-label(for="username") 用户名
                div.controls
                    input.input-xlarge#username(type="text", name="username")
            div.control-group
                label.control-label 密码
                div.controls
                    input#password.input-xlarge(type="password", name="password")
            div.form-actions
                input.btn.btn-primary(type="submit")